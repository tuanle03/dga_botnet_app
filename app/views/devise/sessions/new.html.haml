.background
  .wrapper
    .title Login Form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.email_field :email, required: true, autofocus: true, autocomplete: "email"
        = f.label :email, "Email Address"
      .field
        = f.password_field :password, required: true, autocomplete: "current-password"
        = f.label :password, "Password"
      - if devise_mapping.rememberable?
        .content
          .checkbox
            = f.check_box :remember_me, id: "remember-me"
            = f.label :remember_me, "Remember me", for: "remember-me"
      .field
        = f.submit "Log in"
      .signup-link
        Not a member?
        = link_to "Signup now", new_registration_path(resource_name)
